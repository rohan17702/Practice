#include <iostream>
using namespace std;
int main()
{
   int a = 4 , b = 6 ;
   cout << " a && b = " << (a && b) << endl ;
   cout << " a || b = " << (a || b) << endl ;
   cout << " a  ^ b = " << (a ^ b) << endl ;
   cout << "   ~a   = " << (~a) << endl << endl;
   
   cout << " 17 >> 1 = " << (17 >> 1) << endl ;
   cout << " 19 << 1 = " << (19 << 1) << endl << endl;
   
   int i = 7 ;
   cout << " i++ = " <<  i++ << endl;
   cout << " ++i = " << ++i << endl;
   cout << " i-- = " << i-- << endl;
   cout << " --i = " << --i << endl;
   
    return 0;
}
